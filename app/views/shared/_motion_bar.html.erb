<div class="bg-white">
  <div class="conteiner">
    <nav class="navbar navbar-expand-lg navbar-white "> 
    
        <ul class="navbar-nav col-3 ">
         <%= link_to image_tag("logo.png", alt: "Rails logo", class:"navbar-item" ,width:"40" ,height:"40") %>
          <li class="navbar-brand">ユーザー</li>
        </ul>
        
        <ul class="navbar-nav col-6 ">
          <li class="nav-item ">
            <a class="nav-link text-dark" href="#">ツイート</a>
          </li>
          
          <!--フォロー-->
          <li class="nav-item ">
            <%= link_to "フォロー #{@user.following.count}", following_user_path(@user) ,class:"nav-link text-dark"  %>
          </li>
          
          <!--フォロワー-->
          <li class="nav-item ">
            <%= link_to "フォロー #{@user.followers.count}", followers_user_path(@user) ,class:"nav-link text-dark"  %>
          </li>
          
          <!--いいね-->
          <li class="nav-item">
            <%= link_to "いいね", "#" ,class:"nav-link text-dark"  %>
          </li>

        </ul>
        
        
        <ul class="navbar-nav col-3">
        
          <li class="nav-item w-100">
          <% if !current_user.nil? %>
            <% unless current_user == @user %>
                  <% if current_user.following?(@user) %>
                    <%= render 'relationships/unfollow' %>
                  <% else %>
                    <%= render 'relationships/follow' %>
                  <% end %>
            <% end %>
          <% end %>
          </li>
        </ul>
    </nav>
  </div>
</div>
