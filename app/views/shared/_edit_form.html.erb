<div class="bg-white p-3">
   <%= form_for(@user, method: :patch ) do |f| %>
      <h3>アカウント編集</h3>
      
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :名前 ,class: "mt-2" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :メール ,class: "mt-2"%>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :一言 ,class: "mt-2" %>
      <%= f.text_field :message, class: 'form-control' %>
         
      <%= f.label :住所 ,class: "mt-2" %>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :リンク ,class: "mt-2"%>
      <%= f.text_field :link, class: 'form-control' %>

      <%= f.label :生年月日 ,class: "mt-2"%>
      <%= f.text_field :barthday, class: 'form-control' %>
  
       <p>アカウント認証 認証済み</p>
       <p><%= link_to "パスワードの再設定" , new_password_reset_path %></p>
       <p>プライバシーポリシー</p>
          
          
      <%= f.submit "Create my account", class: "btn btn-primary float-right mt-3" %>
      <p class="text-white mt-5 ">0</p>
    <% end %>
    
  
   
</div>