<div class="bg-white p-3">
   <%= form_for(@users, method: :patch ) do |f| %>
      <h3>アカウント作成</h3>
      
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :名前 ,class: "mt-2" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :メール ,class: "mt-2"%>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%#= f.label :password %>
      <%#= f.password_field :password, class: 'form-control' %>
         
         <%= fields_for(@users.status) do |h| %>
            <%= h.label :住所 ,class: "mt-2" %>
            <%= h.text_field :address, class: 'form-control' %>
      
            <%= h.label :リンク ,class: "mt-2"%>
            <%= h.text_field :link, class: 'form-control' %>
      
            <%= h.label :生年月日 ,class: "mt-2"%>
            <%= h.text_field :barthday, class: 'form-control' %>
         <% end %>

      <%= f.submit "Create my account", class: "btn btn-primary float-right mt-3" %>
      <p class="text-white mt-5 mb-5">0</p>
    <% end %>

</div>