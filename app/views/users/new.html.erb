<div class="text-white">0</div>
<div class="row">
  <div class="col-md-6 m-auto col-md-offset-3">
    <div class="bg-white border border-dark rounded-lg p-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <h3>アカウント作成</h3>
      
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :名前 ,class: "mt-2" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :メール ,class: "mt-2"%>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :パスワード ,class: "mt-2"%>
      <%= f.password_field :password, class: 'form-control' %>


      <%= f.submit "Create my account", class: "btn btn-primary float-right mt-3" %>
      <p class="text-white mt-5 mb-5">0</p>
    <% end %>
    </div>
  </div>
</div>