<div class="row">
  <div class="col-md-5 m-auto col-md-offset-3">
  
      <h3  class="mt-4 mb-2">パスワード再発行</h3>
        
      <div class="bg-white border border-dark rounded-lg p-3 mt-3">
        <%= form_for(:password_reset, url: password_resets_path) do |f| %>
          
          <!--@userがないのでエラーを独自に実装-->
          <%#= render 'shared/error_messages', object: f.object %>
    
    
          <%= f.label :メールアドレスを入力して下さい ,class: "mt-4"%>
          <%= f.email_field :email, class: 'border w-100 p-1' %>
    
    
          <div class="text-right  mt-4">
            <%= f.submit "確認", class: "btn btn-primary rounded-pill pr-3 pl-3" %>
          </div>
          
        <% end %>
      </div>
  </div>
</div>
<style>
  header{
   border-bottom: solid 1px gainsboro;
  }
</style>