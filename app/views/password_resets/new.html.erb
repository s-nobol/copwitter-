<div class="row">
  <div class="col-md-5 m-auto col-md-offset-3">
  
     <h1>パスワード再発行</h1>
    <p>Find me in app/views/sessions/new.html.erb</p>
    <div class="bg-white border border-dark rounded-lg p-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <h3>パスワード再発行</h3>
      
      <!--@userがないのでエラーを独自に実装-->
      <%#= render 'shared/error_messages', object: f.object %>


      <%= f.label :メールアドレスを入力して下さい ,class: "mt-2"%>
      <%= f.email_field :email, class: 'form-control' %>



      <%= f.submit "Create my account", class: "btn btn-primary float-right mt-3" %>
      <p class="text-white mt-5 mb-5">0</p>
    <% end %>
    </div>
  </div>
</div>