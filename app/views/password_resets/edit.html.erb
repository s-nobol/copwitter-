<div class="row">
  <div class="col-md-5 m-auto col-md-offset-3">
  
        <h3  class="mt-4 mb-2">新しいパスワードを入力</h3>
        <div class="bg-white border border-dark rounded-lg p-3 mt-3">
          <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
        
              <%= hidden_field_tag :email, @user.email %>
        
              <%= f.label :パスワード, class:"mt-3" %>
              <%= f.password_field :password, class: 'border w-100 p-1' %>
        
              <%= f.label :password_confirmation, "パスワード再確認", class:"mt-3" %>
              <%= f.password_field :password_confirmation, class: 'border w-100 p-1' %>
        
              <div class="text-right  mt-4">
                  <%= f.submit "保存", class: "btn btn-primary  rounded-pill pr-3 pl-3" %>
              </div>
          <% end %>
        </div>
        
  </div>
</div>

<style>
  header{
   border-bottom: solid 1px gainsboro;
  }
</style>