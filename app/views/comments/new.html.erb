
<div class="container">
  <h1>Comments#new</h1>
  <p>Find me in app/views/comments/new.html.erb</p>
  <% @post = Post.first %>
   <%= form_for(@comment ) do |f| %>
      <h3>アカウント作成</h3>
      <%= hidden_field_tag :post_id, @post.id %>

      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :こめんと ,class: "mt-2" %>
      <%= f.text_field :content, class: 'form-control' %>
    
    
      <%= f.submit "Create my account", class: "btn btn-primary float-right mt-3" %>
      <p class="text-white mt-5 mb-5">0</p>
  <% end %>

<p>コメント<%= Post.first.id %></p>

    <% @comments = Comment.all %>
    <%= render  @comments %>
</div>